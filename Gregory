        self.set_appear()
        self.initUI()
        self.show()
        def set_appear(self):
            self.setWindowTitle(...)
            self.resize(win_width, win_height)
            self.move(win_x, win_y)
        def initUI(self):
            self.h_line = QLabel(txt_finalwin)
            self.r_line = QLabel(txt_workheart)
